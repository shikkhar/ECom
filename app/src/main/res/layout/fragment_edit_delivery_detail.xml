<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/layout_address_detail"
        layout="@layout/layout_address_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonSaveAddress"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/textColorDark"
        android:text="Save"
        app:backgroundTint="@color/textColorDark"
        app:cornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="@+id/buttonDeleteAddress"
        app:layout_constraintStart_toStartOf="@+id/buttonDeleteAddress"
        app:layout_constraintTop_toBottomOf="@+id/layout_address_detail" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonDeleteAddress"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:text="Delete"
        app:backgroundTint="@color/textColorDark"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSaveAddress"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>